<?xml version="1.0" encoding="UTF-8" ?>
<launch>
    <arg name="base_link" default="base_link"/>
    <arg name="base_footprint" default="base_footprint"/>
    <arg name="z_offset" default="0.0"/>

    <arg name="base_footprint_name" value="$(eval '_'.join(base_footprint.split('/')))"/>
    <node name="$(arg base_footprint_name)" pkg="tf2_ros" type="static_transform_publisher"
          args="0. 0. $(arg z_offset) 0. 0. 0. 1. $(arg base_link) $(arg base_footprint)" />
</launch>
